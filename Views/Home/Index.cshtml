@model ecom.Controllers.HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<div>
    <div class="text-center">
        <h1 class="display-6">Welcome to DotEcom</h1>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <h2 class="text-center">Top Products</h2><br />
        </div>
        @foreach (var topProduct in Model.TopProducts)
        {
            <div class="col-sm-12 col-md-4">
                <div class="card">
                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@topProduct.Id">
                        <img src="@topProduct.ImageUrl" class="card-img-top img-fluid" />
                    </a>
                    <div class="card-body">
                        <a asp-controller="Product" asp-action="Detail" asp-route-id="@topProduct.Id">
                            <h5 class="card-title">@topProduct.Name</h5>
                        </a>
                        <p class="card-text">
                            @topProduct.Description
                        </p>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Category" asp-action="Detail" asp-route-id="@topProduct.CategoryId">
                            @topProduct.Category.Name
                        </a>
                    </div>
                </div>
            </div>
        }
        <div class="col-sm-12 col-md-12">
            <br />
            <h2 class="text-center">Other Categories</h2><br />
            <div class="row">
                @foreach (var category in Model.OtherCategories)
                {
                    <div class="col-sm-12 col-md-12">
                        <h3 class="text-center">@category.Name</h3><br />
                    </div>
                    @foreach (var item in category.Products)
                    {
                        <div class="col-sm-12 col-md-4 mb-3">
                            <div class="card">
                                <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id">
                                    <img src="@item.ImageUrl" class="card-img-top img-fluid" />
                                </a>
                                <div class="card-body">
                                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id">
                                        <h5 class="card-title">@item.Name</h5>
                                    </a>
                                    <p class="card-text">
                                        @item.Description
                                    </p>
                                </div>
                                <div class="card-footer">
                                    <a asp-controller="Category" asp-action="Detail" asp-route-id="@category.Id">
                                        @category.Name
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
