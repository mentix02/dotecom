@model IEnumerable<ecom.Models.Product>

@{
    ViewData["Title"] = "Search Results";
}

<div class="text-center">
    <h1 class="display-6">Search Results for "@ViewData["SearchString"]"</h1>
</div>

@if (Model.Any())
{
    <div class="row">
    @foreach (var product in Model)
        {
            <div class="col-sm-12 col-md-4">
                <div class="card">
                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id">
                        <img src="@product.ImageUrl" class="card-img-top img-fluid" />
                    </a>
                    <div class="card-body">
                        <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id">
                            <h5 class="card-title">@product.Name</h5>
                        </a>
                        <p class="card-text">
                            @product.Description
                        </p>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Category" asp-action="Detail" asp-route-id="@product.CategoryId">
                            @product.Category.Name
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <h3 class="text-center">No results found.</h3>
}

